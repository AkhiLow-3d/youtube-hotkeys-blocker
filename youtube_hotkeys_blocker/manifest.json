{
  "manifest_version": 3,
  "name": "YouTube Hotkeys Blocker",
  "version": "1.0.0",
  "description": "Disable YouTube's built-in keyboard shortcuts (configurable).",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Hotkeys Blocker"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}